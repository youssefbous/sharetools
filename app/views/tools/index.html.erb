<div id="tools-list">
  <div class="container">
    <div class="row">
    <% @tools.each do |tool| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5)), url('<%= tool_image_path(tool) %>');">
            <div class="card-category"><%= tool.price_per_day %> â‚¬ / day</div>
            <div class="card-description">
              <h2><%= tool.title %></h2>
            </div>
            <%= link_to '', tool_path(tool), class: 'card-link' %>
          </div>
        </div>
      <% end -%>
    </div>
  </div>
</div>
