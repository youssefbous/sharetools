<div class="container">
  <div class="row">
  <% @tools.each do |tool| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-header">
            <h1><%= tool.title.upcase %></h1>
            <h1><%= tool.price_per_day %> â‚¬/day</h1>
          </div>
          <div class="card-image" style="background-image: url('<%= tool_image_path(tool) %>')">
          </div>
          <div class="card-description">
            <p><%= tool.description %></p>
          </div>
          <p><%= link_to "En savoir plus", tool_path(tool), class: 'card-link' %></p>
        </div>
      </div>
    <% end -%>
  </div>
</div>

